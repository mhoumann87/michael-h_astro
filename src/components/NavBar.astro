---
const navigation = [
  {
    href: '/',
    name: 'Home',
  },
  {
    href: '/projects',
    name: 'Projects',
  },
  {
    href: '/javascript',
    name: 'Javascript',
  },
  {
    href: '/generative-art',
    name: 'Generative Art',
  },
  {
    href: '/contact',
    name: 'Contact',
  },
]
---

<nav>
  <ul class="flex">
    {
    navigation.map(link => <li><a href={link.href}>{link.name}</a></li>)
    }
  </ul>
</nav>

<style>
  li {
    position: relative;
    padding: 0.125em 0.25em;
  }

  a {
    text-decoration: none;
    color: var(--clr-links-hover);
    text-transform: lowercase;

    &::after {
      content: '';
      position: absolute;
      left: 0;
      bottom: 0;
      width: 100%;
      height: 3px;
      background: currentColor;
      transform: scaleX(0);
      transform-origin: left;
      transition: transform 250ms ease-in;
    }

    &:hover::after {
      transform: scaleX(1);
    }
  }


</style>